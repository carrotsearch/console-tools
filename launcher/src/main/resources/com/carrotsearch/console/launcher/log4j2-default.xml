<?xml version="1.0" encoding="UTF-8"?>

<Configuration xmlns:xi="http://www.w3.org/2001/XInclude"
               status="WARN"
               packages="com.carrotsearch.progresso.log4j">

  <Appenders>
    <xi:include href="appender-console-info.xml" />
    <xi:include href="appender-console-warn.xml" />
  </Appenders>

  <Loggers>
    <Logger level="INFO" name="console" additivity="false">
      <AppenderRef ref="appender-console-info" />
    </Logger>

    <Root level="DEBUG">
      <AppenderRef ref="appender-console-warn" />
    </Root>
  </Loggers>
</Configuration>